        <%= link_to image_tag("fbWhite.png", :size => "20x20") + "   Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "btn btn-primary", :style => 'text-align: center; margin: 5px 0px 5px 0px; width: 100%;' %><br />
    <% end -%>
<% end -%>