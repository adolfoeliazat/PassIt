<div class="container">
  <%- model_class = ItemRequest -%>
  <div class="page-header">
    <h1><!--%=t '.title', :default => model_class.model_name.human.pluralize.titleize %--></h1>
    <h1> Pending Requests</h1>
  </div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:item_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:fromDate) %></th>
      <th><%= model_class.human_attribute_name(:toDate) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
    </thead>
    <tbody>
    <% @item_requests.each do |item_request| %>
        <tr>
          <td><%= link_to item_request.id, item_request_path(item_request) %></td>
          <td><%= Item.find(item_request.item_id).name %></td>
          <td><%= User.find(item_request.user_id).username %></td>
          <td><%= item_request.fromDate %></td>
          <td><%= item_request.toDate %></td>
          <td><%= item_request.description %></td>
          <td><%= item_request.price %></td>
          <td><%= item_request.created_at %></td>
          <td><%= item_request.status %></td>
          <td>
            <!--%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_item_request_path(item_request), :class => 'btn btn-default btn-xs' %-->
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        item_request_path(item_request),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              dashboard_index_path, :class => 'btn btn-default btn-xs' %>

</div>


